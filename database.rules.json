// to deploy rules (file must be included in firebase.json) use:
// firebase deploy --only database
{
  "rules": {
    ".read": "true",
    "articleData": {
      "userBookmarksPerArticle": {
        "$articleId": {
          "$uid": {
            ".write": "auth.uid == $uid"
          }
        }
      }
    },
    "commentData": {
      "comments": {
        "$commentId": {
          ".write": "auth != null && (!data.exists() || auth.uid === data.child('authorKey').val())"
        }
      },
      "commentsByAuthor": {
        "$uid": {
          ".write": "auth.uid == $uid"
        }
      },
      "commentsByParent": {
        ".write": "auth != null"
      },
      "votesByUser": {
        "$uid": {
          ".write": "auth.uid == $uid"
        }
      }
    },
    "userInfo": {
      "articleBookmarksPerUser": {
        "$uid": {
          ".write": "auth.uid == $uid"
        }
      },
      "articlesAuthoredPerUser": {
        "$uid": {
          ".write": "auth.uid == $uid"
        }
      },
      "articlesEditedPerUser": {
        "$uid": {
          ".write": "auth.uid == $uid"
        }
      },
      "open": {
        "$uid": {
          ".write": "auth.uid == $uid"
        }
      }
    }
  }
}
